Config {
    font = "xft:SFNS Display:pixelsize=13,Unifont:pixelsize=13",
    additionalFonts = ["xft:FontAwesome:pixelsize=13", "xft:Noto Emoji:pixelsize=13"],
    bgColor = "#16130f",
    fgColor = "#a39a90",
    position = Top,
    lowerOnStart = True,
    overrideRedirect = False,

    commands = [
        Run Battery [
            "--template" , "<acstatus>",
            "--Low"      , "10",       -- units: %
            "--High"     , "50",       -- units: %
            "--low"      , "darkred",
            "--normal"   , "darkorange",
            "--",
            "-o", "<leftipat>  <left>%",
            "-O", "<leftipat>  <left>%",
            "-i", "<fn=1>\xf240</fn>",
            "--off-icon-pattern", "<fn=1>\xf1e6</fn>",
            "--on-icon-pattern", "<fn=1>\xf1e6</fn>"
        ] 50,

        Run Volume "default" "Master" [
            "-t", "<status>  <volume>%",
            "--",
            "-o", "<fn=1>\xf026</fn>",
            "-O", "<fn=1>\xf028</fn>",
            "-c", "#a39a90",
            "-C", "#a39a90"
        ] 3,

        Run Date "%a %b %0d %H:%M:%S" "date" 10,

        Run DynNetwork [
            "-t","<fn=1>\xf093</fn> <tx> kB/s <fn=1>\xf019</fn> <rx> kB/s",
            "--Low", "500000",
            "--High", "2500000",
            "--normal","darkorange",
            "--high","darkred"
        ] 10,

        Run MPD [
            "-t", "<statei>  <artist> - <title>",
            "--",
            "-P", "<fn=1>\xf04b</fn>",
            "-Z", "<fn=1>\xf04c</fn>",
            "-S", "<fn=1>\xf04d</fn>"
        ] 10,

        Run Com "bin/cur-lang" [] "ibus" 10,

        Run StdinReader
    ],

    sepChar = "%",
    alignSep = "}{",
    template = "    %StdinReader%    %mpd%}    %date%    {\
        \%dynnetwork%    %default:Master%    <fn=1>ï„œ</fn>:<fn=2>%ibus%</fn>    %battery%    "
}

